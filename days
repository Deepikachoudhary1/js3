    <script>
        let hor=new Date()
let hrs=hor.getHours()
function hors(){
    if(hrs>12){
        console.log(hrs-12)
    }else{
        console.log(hrs)
    }
}
hors(hrs)

// Generate the 6 digit otp:-

function otp(){
    console.log((Math.random(otp)*1000000).toFixed(0))
}
otp(otp)

